# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/unisearch_db
DATABASE_URL_DEV=sqlite:///./unisearch_dev.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Google Sheets Integration (for student surveys)
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_CREDENTIALS_JSON={"type": "service_account", "project_id": "your_project"}

# External Data Sources
QS_RANKINGS_CSV_PATH=data/qs_rankings.csv
THE_RANKINGS_API_KEY=your_the_api_key_if_needed
NUMBEO_API_KEY=your_numbeo_api_key_if_needed

# Web Scraping Configuration
SCRAPING_DELAY=1
MAX_RETRIES=3
USER_AGENT=UniSearch/1.0 Educational Research

# Security
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Deployment
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com
ENVIRONMENT=development

# Data Processing
ENABLE_DATA_VALIDATION=True
AUTO_UPDATE_RANKINGS=False
CACHE_EXPIRY_HOURS=24

# Logging
LOG_LEVEL=INFO